    <title>
        Dashboard
    </title>

    </head>

    <body>

        <%- include('./partials/nav-bar.ejs') %>


        <form action="/" method="POST">
            <div class="container-fluid">               
                               
                <div class="card">
                    <div class="card-body bg-light">
                    <h5 class="card-title">Daily Statistics for Zimbabwe</h5>                   
                    
                    
                    <div class="table-responsive">
                        <table class="table">                            
                            <thead id="headerTable">
                                    <tr>
                                        <th>
                                            Country
                                        </th>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            Confirmed Cases
                                        </th>
                                        <th>
                                            Deaths
                                        </th>
                                        <th>
                                            Recovered
                                        </th>
                                    </tr>                                                                                              
                            </thead>                             
                            <tbody>
                                <%                                 
                                for (var counter=0; counter<apiData.length; counter++){ 
                                    datesArray.push(apiData[counter].Date);
                                    confirmedArray.push(apiData[counter].Confirmed);
                                    %>                                    
                                    <tr>
                                        <td>
                                            <%= apiData[counter].Country %>
                                        </td>
                                        <td>
                                            <%= apiData[counter].Date %> 
                                        </td>
                                        <td>                                    
                                            <%= apiData[counter].Confirmed %>
                                        </td>
                                        <td>
                                            <%= apiData[counter].Deaths %>
                                        </td>
                                        <td>
                                            <%= apiData[counter].Recovered %>
                                        </td>                                                     
                                    </tr>
                                    <% } %>

                            </tbody>                            
                        </table>                            
                    </div>
                    
                    
                    </div>
                </div>              
                  

            </div> 
        </form>       


        

        <!-- Bootstrap core JavaScript-->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
